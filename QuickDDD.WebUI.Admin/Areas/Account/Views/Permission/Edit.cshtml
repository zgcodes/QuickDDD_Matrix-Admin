@model Quick.Application.PermissionDto
@{
    Layout = null;
}

<div class="control-group">
    <input type="hidden" name="Id" value="@Model.Id"/>
    <label class="control-label-form">
        <label class="red">*</label>权限名称:
    </label>
    <div class="controls">
        @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
    </div>
</div>

<div class="control-group">
    <label class="control-label-form">
        <label class="red">*</label>编码:
    </label>
    <div class="controls">
        @Html.TextBoxFor(t => t.Code, new { @class = "form-control" })
    </div>
</div>
<div class="control-group">
    <label class="control-label-form">
        图标 :
    </label>
    <div class="controls">
        @Html.TextBoxFor(t => t.Icon, new { @class = "form-control" })
    </div>
</div>
<div class="control-group">
    <label class="control-label-form">
        <label class="red">*</label>排序 :        
    </label>
    <div class="controls">
        @Html.TextBoxFor(t => t.OrderSort, new { @class = "form-control" })
    </div>
</div>
<div class="control-group">
    <label class="control-label-form">
        <label class="red">*</label>描述 :        
    </label>
    <div class="controls">
        @Html.TextBoxFor(t => t.Description, new { @class = "form-control" })
    </div>
</div>

<div class="control-group">
    <label class="control-label-form">
        激活 : 
    </label>
    <div class="controls">
        @Html.CheckBoxFor(t => t.Enabled)
    </div>
</div>

